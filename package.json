{
  "name": "itDAGENE-webapp",
  "version": "0.0.1",
  "description": "itDAGENE-next",
  "scripts": {
    "dev": "node server.js",
    "build": "next build",
    "start": "NODE_ENV=production node server.js",
    "schema:prod": "get-graphql-schema https://itdagene.no/graphql > schema/schema.graphql",
    "schema:dev": "get-graphql-schema http://localhost:8000/graphql > schema/schema.graphql",
    "relay": "relay-compiler --src ./ --exclude '**/schema/**' --exclude '**/.next/**' '**/node_modules/**' '**/test/**'  '**/__generated__/**' --schema ./schema/schema.graphql --watchman false",
    "lint:prettier": "prettier '**/*.{js,css,graphql}' --list-different",
    "lint:eslint": "eslint . --ignore-path .prettierignore",
    "lint": "yarn lint:prettier && yarn lint:eslint && yarn flow",
    "prettier": "prettier '**/*.{js,css,graphql}' --write",
    "flow": "flow --quiet",
    "test": "JEST_PUPPETEER_CONFIG=./testing/jest-puppeteer.config.js NODE_ENV=test jest"
  },
  "author": "Odin Ugedal <odin@ugedal.com>",
  "license": "MIT",
  "dependencies": {
    "@zeit/next-bundle-analyzer": "^0.1.1",
    "@zeit/next-css": "^1.0.1",
    "@zeit/next-source-maps": "^0.0.4-canary.0",
    "babel-polyfill": "^6.26.0",
    "dayjs": "^1.7.4",
    "express": "^4.16.3",
    "express-http-proxy": "^1.2.0",
    "graphql": "^14.1.1",
    "isomorphic-unfetch": "^2.0.0",
    "lodash": "^4.17.11",
    "next": "^8.0.3",
    "raven": "^2.5.0",
    "raven-js": "^3.24.0",
    "rc-slider": "^8.6.3",
    "react": "^16.7.0",
    "react-countdown-now": "^2.0.2",
    "react-dom": "^16.7.0",
    "react-hamburger-menu": "^1.1.1",
    "react-infinite-scroller": "^1.2.0",
    "react-markdown": "^4.0.6",
    "react-relay": "2.0.0",
    "react-relay-network-modern": "^2.4.0",
    "react-select": "^2.2.0",
    "recompose": "^0.28.0",
    "relay-runtime": "2.0.0",
    "styled-components": "^4.0.3",
    "styled-flex-component": "^3.0.0",
    "url-loader": "^1.0.1"
  },
  "browser": {
    "raven": false,
    "puppeteer": false
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-flow": "^7.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.0.0",
    "babel-plugin-relay": "^2.0.0",
    "babel-plugin-styled-components": "^1.8.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^5.0.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-config-react-app": "^4.0.1",
    "eslint-plugin-flowtype": "^3.0.0",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-relay": "^1.0.0",
    "flow-bin": "^0.94.0",
    "get-graphql-schema": "^2.1.2",
    "jest": "^24.4.0",
    "jest-puppeteer": "3.2.1",
    "prettier": "^1.11.1",
    "puppeteer": "^1.5.0",
    "react-test-renderer": "^16.4.1",
    "relay-compiler": "2.0.0"
  },
  "prettier": {
    "singleQuote": true
  },
  "jest": {
    "preset": "jest-puppeteer",
    "setupFiles": [
      "<rootDir>/testing/jest.setup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/jest/FileStub.js",
      "\\.(css|less)$": "<rootDir>/jest/CssStub.js"
    }
  }
}
